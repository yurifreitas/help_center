{
    "$schema": "../gen/schemas/android-schema.json",
    "identifier": "main-capability",
    "description": "Capability for the main window",
    "windows": ["main"],
    "permissions": [
      {
        "identifier": "shell:allow-execute",
        "allow": [
          {
            "name": "exec-sh",
            "cmd": "sh",
            "args": [
              "-c",
              {
                "validator": "\\S+"
              }
            ],
            "sidecar": false
          }
        ]
      }
    ]
  }